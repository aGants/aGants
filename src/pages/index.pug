doctype html
html(lang="ru")
  head
    meta(property="og:locale" content="ru_RU")
    meta(property="og:type" content="website")
    meta(property="og:url" content="https://agants.github.io/about-me/")
    meta(property="og:title" content="Страница обо мне")
    meta(property="og:description" content="Немного об Аделе")
    meta(property="og:image" content="image/og.jpg")
    meta(property="og:image:alt" content="Про Аделю")
    meta(property="og:image:width" content="510")
    meta(property="og:image:height" content="228")
